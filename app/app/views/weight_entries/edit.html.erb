
<h1 class="text-2xl font-bold mb-4">Modifier des informations</h1>

<%= form_with(model: @weight_entry, local: true) do |form| %>
  <% if @weight_entry.errors.any? %>
  <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2>Erreur(s) de validation</h2>
      <ul>
        <% @weight_entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div class="actions">
    <%= form.submit 'Enregistrer modification', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<%= link_to 'Back', weight_entries_path %>